{% extends 'base.html.twig' %}

{% block title %}Список классов{% endblock %}

{% block body %}
    <div class="container">
        <h2>Классы</h2>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {{ form_start(form) }}
            <div class="form-group">
                <label for="textarea">{{ form_label(form.number) }}</label>
                {{ form_widget(form.number) }}
            </div>
            <div class="form-group">
                <label for="textarea">{{ form_label(form.letter) }}</label>                {{ form_widget(form.letter) }}
            </div>
            <button type="submit">Сохранить</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}