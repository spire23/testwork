{% extends 'base.html.twig' %}

{% block title %}Список учащихся{% endblock %}

{% block body %}
    <div class="container">
        <h2>Добавить ученика</h2>
        <div class="card text-black">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{ form_start(form) }}
                <div class="form-group">
                    <label for="textarea">{{ form_label(form.lastname) }}</label><br>
                    {{ form_widget(form.lastname) }}
                </div>
                <div class="form-group">
                    <label for="textarea">{{ form_label(form.name) }}</label><br>
                    {{ form_widget(form.name) }}
                </div>
                <div class="form-group">
                    <label for="textarea">{{ form_label(form.patronymic) }}</label><br>
                    {{ form_widget(form.patronymic) }}
                </div>
                <div class="form-group">
                    <label for="textarea">{{ form_label(form.sex) }}</label><br>
                    {{ form_widget(form.sex) }}
                </div>
                <div class="form-group">
                    <label for="textarea">{{ form_label(form.birthday) }}</label><br>
                    {{ form_widget(form.birthday) }}
                </div>
            <button class="btn btn-success" type="submit">Сохранить</button>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}